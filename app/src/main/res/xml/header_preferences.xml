<androidx.preference.PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Language" />

    <Preference
        app:fragment="com.example.yultravel.SettingsActivity$TranslationFragment"
        app:icon="@drawable/messages"
        app:key="translation_header"
        app:summary="Use the app in another language!"
        app:title="Change language" />

    <PreferenceCategory
        app:title="Notifications"/>

    <Preference
        app:fragment="com.example.yultravel.SettingsActivity$NotificationsFragment"
        app:icon="@drawable/sync"
        app:key="sync_header"
        app:title="Activate/deactivate notifications"
        app:summary="Choose what kind of notifications the app sends you"/>

</androidx.preference.PreferenceScreen>
