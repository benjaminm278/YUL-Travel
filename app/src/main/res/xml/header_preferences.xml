<androidx.preference.PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        app:title="Account"/>

    <Preference
        app:fragment="com.example.yultravel.SettingsActivity$MessagesFragment"
        app:icon="@drawable/messages"
        app:key="messages_header"
        app:title="Edit profile"
        app:summary="Edit the information you provided in the setup"/>

    <PreferenceCategory
        app:title="Appearance"/>

    <Preference
        app:fragment="com.example.yultravel.SettingsActivity$MessagesFragment"
        app:icon="@drawable/messages"
        app:key="messages_header"
        app:title="Light/Dark mode"
        app:summary="Change the appearance of the app"/>

    <PreferenceCategory
        app:title="Notifications"/>

    <Preference
       app:fragment="com.example.yultravel.SettingsActivity$SyncFragment"
        app:icon="@drawable/sync"
        app:key="sync_header"
        app:title="Activate/deactivate notifications"
        app:summary="Choose what kind of notifications the app sends you"/>

</androidx.preference.PreferenceScreen>
